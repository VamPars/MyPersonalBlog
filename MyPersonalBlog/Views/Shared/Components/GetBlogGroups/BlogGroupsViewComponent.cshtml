@model List<MyPersonalBlog.DataLayer.Entities.BlogGroup>

<div class="card mb-4">
	<div class="card-header">بخش های زندگی ما</div>
	<div class="card-body">
		<div class="row">
			<div class="col-sm-6">
				<ul class="list-unstyled mb-0">
					@for(int i = 0;i<Model.Count; i+=2)
					{
						<li ><a href="/home/GetBlogByBlogGroups/@Model[i].Id" class="text-info">@Model[i].BlogGroupName</a></li>

					}
				</ul>
			</div>
			<div class="col-sm-6">
				<ul class="list-unstyled mb-0">
					@for(int i = 1;i<Model.Count; i+=2)
					{
						<li><a href="/home/GetBlogByBlogGroups/@Model[i].Id" class="text-success">@Model[i].BlogGroupName</a></li>

					}
				</ul>
			</div>
		</div>
	</div>
</div>